<% for (var i in messages) { %>
<div class="flash"><%= messages[i] %></div>
<% } %>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend><%= userlogin[lang]%></legend>
		<div class="control-group">
			<label class="control-label" for="email"><%= email[lang]%></label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="email" name="email">
			</div>
		</div>
		<div class="control-group" style="display:none">
			<label class="control-label" for="password"><%= password[lang]%></label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password" value="123456">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary"><%= login[lang]%></button>
		</div>
	</fieldset>
</form>